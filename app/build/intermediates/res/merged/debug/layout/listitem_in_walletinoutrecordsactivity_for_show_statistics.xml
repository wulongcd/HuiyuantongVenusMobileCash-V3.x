<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/listItem_up_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ca8a8a8"
        android:visibility="gone" />

    <View
        android:id="@+id/listItem_center_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/ca8a8a8" />

    <LinearLayout
        android:id="@+id/ll_in_statistics_of_left_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/listItem_center_line"
        android:layout_below="@id/listItem_up_line"
        android:layout_marginRight="2dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/left_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/c333333"
            android:maxHeight="40dp" />

        <TextView
            android:id="@+id/left_item_tv_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/c333333"
            android:maxHeight="40dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_in_statistics_of_right_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/listItem_center_line"
        android:layout_below="@id/listItem_up_line"
        android:layout_marginLeft="2dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/right_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/c333333"
            android:maxHeight="40dp" />

        <TextView
            android:id="@+id/right_item_tv_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/c333333"
            android:gravity="center"
            android:maxHeight="40dp" />
    </LinearLayout>

    <View
        android:id="@+id/listItem_down_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/ca8a8a8" />

</RelativeLayout><!-- From: file:/E:/Code/收款宝/worker/HuiyuantongVenusMobileCash-V3.x/app/src/main/res/layout/listitem_in_walletinoutrecordsactivity_for_show_statistics.xml -->