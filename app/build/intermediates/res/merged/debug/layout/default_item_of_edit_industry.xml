<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_in_editItem_of_industry"
            android:layout_width="@dimen/width_of_item_in_registerActivity"
            android:layout_height="@dimen/height_of_leftItem_in_registerActivity"
            android:layout_weight="0"
            android:text="@string/string_of_industry"
            style="@style/leftItem_in_registerActivity"/>

        <Button
            android:id="@+id/btn_in_editItem_of_industry"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_of_leftItem_in_registerActivity"
            android:layout_weight="1"
            android:hint="@string/hint_string_of_industry"
            style="@style/btn_in_registerActivity_of_item"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/short_downLine_in_editItem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/margin_divider"/>

