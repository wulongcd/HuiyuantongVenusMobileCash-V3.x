<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg" >

    <Button
        android:id="@+id/btn_in_fragment_for_date_start"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/shape_trans_noconeners_edittext"
        android:drawableLeft="@drawable/calendar"
        android:drawableRight="@drawable/arrow_down"
        android:gravity="center"
        android:hint="@string/set_start_time"
        android:paddingLeft="@dimen/end_time_button_margin_right"
        android:singleLine="true"
        android:textColor="@color/c333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_zhi"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/start_time_ll_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/zhi"
        android:textColor="@color/c333333"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_in_fragment_for_date_end"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:background="@drawable/shape_trans_noconeners_edittext"
        android:drawableLeft="@drawable/calendar"
        android:drawableRight="@drawable/arrow_down"
        android:gravity="center"
        android:hint="@string/set_end_time"
        android:paddingRight="@dimen/end_time_button_margin_right"
        android:singleLine="true"
        android:textColor="@color/c333333"
        android:textSize="14sp" />

