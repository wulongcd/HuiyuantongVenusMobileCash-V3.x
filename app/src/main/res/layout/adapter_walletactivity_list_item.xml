<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_white_f0f0f0"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <ImageView
        android:id="@+id/iv_in_walletactivity_for_adapter_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher"
        tools:ignore="NestedWeights" />

    <TextView
        android:id="@+id/tv_in_walletactivity_for_adapter_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:paddingLeft="9.6dp"
        android:paddingRight="9.6dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="14sp"
        tools:ignore="NestedWeights" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/swallow_at_myself" />

</LinearLayout>