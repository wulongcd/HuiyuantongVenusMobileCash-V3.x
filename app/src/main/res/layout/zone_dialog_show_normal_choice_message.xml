<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sintn_colorprimary_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/zone_dialog_show_normal_message_tv_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zone_dialog_show_normal_message_tv_cancle"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/cancle"
            android:textColor="@color/selector_white_f0f0f0"
            android:textSize="16sp" />

        <Button
            android:id="@+id/zone_dialog_show_normal_message_tv_sure"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/sure"
            android:textColor="@color/selector_white_f0f0f0"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>